<%= messages_bar %>

<p>
  <%= link_to 'New app', new_app_path, class: 'btn btn-default' %>
</p>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Languages</th>
      <th>Text strings</th>
      <th>PO download</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.languages.map(&:iso).join(', ') %></td>
        <td><%= app.texts.count %></td>
        <td><%= download_links(app, :po) %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
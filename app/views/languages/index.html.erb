<%= messages_bar %>

<p>
  <%= link_to 'New language', new_language_path, class: 'btn btn-default' %>
</p>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>ISO 639-1 code</th>
      <th>Apps</th>
    </tr>
  </thead>
  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= link_to language.name, edit_language_path(language.id) %></td>
        <td><%= language.iso %></td>
        <td><%= language.apps.map(&:name).join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>